<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/off_white"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/abril_fatface"
        android:text="IFSC Code Validator"
        android:textColor="#390202"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ifscCode"
        android:layout_width="365dp"
        android:layout_height="49dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="24dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter IFSC Code"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heading" />


    <Button
        android:id="@+id/btnGetDetails"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/bigshot_one"
        android:padding="20dp"
        android:text="GET BANK DETAILS"
        android:textColor="#510808"
        android:textSize="20sp"
        android:textStyle="bold"

        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="@+id/ifscCode"
        app:layout_constraintStart_toStartOf="@+id/ifscCode"
        app:layout_constraintTop_toBottomOf="@+id/ifscCode"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp" />


    <TextView
        android:id="@+id/bankDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif-black"
        android:gravity="left"
        android:padding="20dp"
        android:text="BANK DETAILS"
        android:textColor="#1C0202"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnGetDetails"
        app:layout_constraintStart_toStartOf="@+id/btnGetDetails"
        app:layout_constraintTop_toBottomOf="@+id/btnGetDetails" />
</androidx.constraintlayout.widget.ConstraintLayout>